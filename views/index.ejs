<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1"> 
    <title> Loja Bruno Machado</title>
    <style> 
        .img-produto{
            width: 180px;
            height: 210px;
        }
    </style>
    
</head>

<body>
    <script>
        function hideProducts(){
            document.getElementById("productsdiv").style.display = "none";
            document.getElementById("btnComprar").style.display = "none";
            document.getElementById("btnFinalizarCompra").style.display = "inline";
            document.getElementById("btnVoltar").style.display = "inline";
            document.getElementById("formulario").style.display = "inline";  
        }

        function showProducts(){
            document.getElementById("productsdiv").style.display = "inline";
            document.getElementById("btnComprar").style.display = "inline";
            document.getElementById("btnFinalizarCompra").style.display = "none";
            document.getElementById("btnVoltar").style.display = "none";
            document.getElementById("formulario").style.display = "none";  
        }
        
    </script>


    <div>
        <h2> Bruno Machado's Store </h2>
        <hr /><br />

        <div> 
            
            <% for (var i=0; i<products.length; i++){ %>
            
                <div id="productsdiv">
                    <img src="<%= products[i].img %>" class="img-produto" />
                
            
                    <br />
                    <h2><%= products[i].titulo %></h2>
                    <p><%= products[i].descricao %></p>
                    <p>Item Number: <%= products[i].id %></p>
                    <h3>$<%= products[i].preco %></h3>
                </div>
                
                <div>
                    <button type="button" id="btnComprar" onclick="hideProducts()">Comprar</button>
                </div>

                <form action="/buy?id=<%= products[i].id %>"  method = "POST">
                    <div id="formulario" style="display: none;">
                        <label> Contact Data</label> <br> <br>
                        <label for="fname">First name:</label><br>
                        <input type="text" id="fname" name="fname" value="John"><br>

                        <label for="lname">Last name:</label><br>
                        <input type="text" id="lname" name="lname" value="Doe"><br>

                        <label for="email">E-mail:</label><br>
                        <input type="text" id="email" name="email" value="bmachado@personal.example.com"><br>

                        <label for="pnumber">Phone Number:</label><br>
                        <input type="text" id="pnumber" name="pnumber" value="1 408-967-1000"><br><br>

                        <label> Shipping Address</label> <br><br>

                        <label for="street">Street:</label><br>
                        <input type="text" id="street" name="street" value="2211 N 1st St"><br>

                        <label for="State">State:</label><br>
                        <input type="text" id="State" name="State" value="California"><br>

                        <label for="zip">Zip Code:</label><br>
                        <input type="text" id="zip" name="zip" value="95131"><br>

                        <label for="country">Country:</label><br>
                        <input type="text" id="country" name="country" value="United States of America"><br>
                        <br />
                    </div>
                
                 <input type="submit" value="Finalizar compra" id="btnFinalizarCompra" style="display: none;"/>
                 <br />
                 <br />
                 <button type="button" id="btnVoltar" onclick="showProducts()" style="display: none;" >Voltar</button>
                
                </form>
            <% } %>

        </div>

    </div>

</body>
</html>